{
    "name": "iota-poc-zmq-api",
    "description": "API for IOTA ZMQ",
    "version": "1.0.0",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/poc-zmq.git/tree/master/api"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-config",
        "serve-mon": "nodemon ./dist/index",
        "start-dev": "run-p serve-mon build-watch",
        "start": "node ./dist/index"
    },
    "dependencies": {
        "@iota/core": "^1.0.0-beta.8",
        "axios": "^0.18.0",
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "socket.io": "^2.2.0",
        "uuid": "^3.3.2",
        "zeromq": "^5.1.0"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/node": "^11.9.5",
        "@types/socket.io": "^2.1.2",
        "@types/zeromq": "^4.6.1",
        "copyfiles": "^2.1.0",
        "nodemon": "^1.18.10",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3",
        "tslint": "^5.13.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^6.0.0",
        "typescript": "^3.3.3333"
    }
}